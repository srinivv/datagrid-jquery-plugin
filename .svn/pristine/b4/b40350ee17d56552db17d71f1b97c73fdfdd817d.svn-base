/* Pagination Controls Styles */

.pagination {
    font-size: 0.8em;
    overflow: hidden;
	background-color: #E3E3E3;
	margin: 3px 0 5px;
}

.paginationArea {
    float: right;
}

.paginationArea td {
    padding: 0;
    border: none;
}

.paginationArea a {
    margin: 0;
}

.paginationArea a img {
    margin: 5px;
}

.paginationArea span {
    margin: 0 2px;
    font-size: 12px;
    color: #666666;
    font-weight: bold;
}

.paginationArea input {
    margin: 0 3px;
    vertical-align: middle;
    width: 20px;
    height: 10px;
    padding: 6px 8px 3px;
    text-align: left;
}

