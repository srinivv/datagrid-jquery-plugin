#Assign different Appenders to root. Also assign a log type. 
log4j.rootCategory=INFO,CON

log4j.category.com.cisco=DEBUG
log4j.category.com.cisco.salesit.coresvc=ERROR
log4j.category.org.apache.jsp=DEBUG
log4j.category.com.cisco.icw.pdr=DEBUG, stdout
 
#enable/disable debug in log4j ( use it when u need to debug some things within log4j) 
log4j.debug=false 
 
 
# -------------CONSOLE-------------------------------------------------------------# 
log4j.appender.CON=org.apache.log4j.ConsoleAppender 
log4j.appender.CON.layout=org.apache.log4j.PatternLayout 
log4j.appender.CON.layout.ConversionPattern=%d{dd MMM yyyy HH:mm:ss} %-5p [%t] %x - %m%n

log4j.appender.stdout=org.apache.log4j.RollingFileAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.File=${cisco.logdir}/sell.log
#log4j.appender.stdout.File=C:/logs/adj.log

# Pattern to output the caller's file name and line number.
log4j.appender.stdout.layout.ConversionPattern=%d{dd MMM yyyy HH:mm:ss} %-5p [%t] %x - %m%n
log4j.appender.stdout.MaxFileSize=1024KB
log4j.appender.stdout.MaxBackupIndex=3  

log4j.logger.com.cisco.ata=DEBUG, CON