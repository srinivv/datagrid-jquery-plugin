package com.cisco.apas.dao;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.orm.hibernate3.support.HibernateDaoSupport;

import com.cisco.apas.APASConstants;
import com.cisco.apas.APASMessagesConstants;

public class BaseDao extends HibernateDaoSupport implements APASConstants, DataAccessQueries, APASMessagesConstants {

	protected static final int PAGE_SIZE = 5;

	protected JdbcTemplate apasJdbcTemplate;

	public JdbcTemplate getApasJdbcTemplate() {
		return apasJdbcTemplate;
	}

	public void setApasJdbcTemplate(JdbcTemplate apasJdbcTemplate) {
		this.apasJdbcTemplate = apasJdbcTemplate;
	}

	public int calculateFirstResult(int pageNo, int pageSize) {

		if (pageNo == 1) {
			return pageNo;
		} else {
			int firstResult = (pageNo - 1) * pageSize;
			return firstResult++;
		}
	}

}
