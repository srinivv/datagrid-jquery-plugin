<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.cisco.apas.entity.Node" table="PSE_NODE_LOOKUP">
		<id name="id" column="NODE_ID" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
		
		<property name="name" type="string" column="NODE_NAME" />
		<property name="type" type="string" column="NODE_TYPE" />
		<property name="level" type="string" column="NODE_LEVEL" />
		<property name="status" type="string" column="STATUS" />
		<property name="createdOn" type="timestamp" column="CREATED_ON" />
		<property name="createdBy" type="string" column="CREATED_BY" />
		<property name="updatedOn" type="timestamp" column="UPDATED_ON" />
		<property name="updatedBy" type="string" column="UPDATED_BY" />
		<bag name="items"  lazy="false"  cascade="all">
            <key column="NODE_ID"/>
			<one-to-many class="com.cisco.apas.entity.NodeItem" />
        </bag>
		<bag name="rules"  lazy="true"  cascade="all">
	        <key column="NODE_ID"/>
	        <one-to-many class="com.cisco.apas.entity.Rule" />           
	    </bag>
	</class>
	<class name="com.cisco.apas.entity.NodeItem" table="PSE_NODE_DETAILS">
		<id name="id" column="NODE_DETAIL_ID" type="long" unsaved-value="null">
			<generator class="native"/>
		</id>
      <property name="itemProduct" column="PRODUCT_ITEM" type="string"/>
      <property name="itemService" column="SERVICE_ITEM" type="string"/>
      <property name="status" column="STATUS" type="string"/>
      <many-to-one name="node" column="NODE_ID" lazy="proxy" class="com.cisco.apas.entity.Node" not-null="true"/>
   </class>
   <query name="searchCount.NodeItem">
		<![CDATA[ select count(distinct node) from NodeItem nodeitem where nodeitem.itemProduct like ? ||'%' and nodeitem.node.status <> 'I']]>
	</query>
  
	 <query name="get.Node">
		<![CDATA[ select distinct node from Node node where node.status <> 'I' and node.id = ?]]>
	</query>
</hibernate-mapping>
