<?xml version="1.0"?>

<project name="apa" default="default" basedir="./../">
    <description>
            Build script for APAS
    </description>
	<property name="src.dir" value="${basedir}/src" />
	<property name="lib.dir" value="${basedir}/WebRoot/WEB-INF/lib" />
	<property name="build.dir" value="${basedir}/build" />
	<property name="work.dir" value="${basedir}/work" />
	<property name="web.dir" value="${basedir}/WebRoot" />
	<property name="classes.dir" value="${basedir}/WebRoot/WEB-INF/classes" />
	<property name="conf.dir" value="${basedir}/WebRoot/WEB-INF" />
	<property environment="env" name="env.LANG" value="en_US"></property>

	
	<path id="sds.classpath">
		
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
		
		<fileset dir="${basedir}/local_lib">
			<include name="**/*.jar" />
			<include name="**/*.zip" />
		</fileset>
	</path>


    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="deploy">
        
    </target>
	
	<target name="clean"> 
		<delete dir="${classes.dir}" />
	</target>
	
	<target name="compile" depends="clean"> 
		<fileset dir="${web.dir}" includes="**/*.gif"/>
	 	<fileset dir="${web.dir}" includes="**/*.jpg"/>	
	 	<fileset dir="${web.dir}" includes="**/*.js"/>
	  	<fileset dir="${web.dir}" includes="**/*.css"/>
		<mkdir dir="${classes.dir}" />
		<javac
			classpathref="sds.classpath"
			srcdir="${src.dir}"
			destdir="${classes.dir}"
			debug="on">
		</javac>
	</target>
	
	<target name="deploy" depends="compile">
				
		<copy todir="${conf.dir}">
				<fileset dir="${basedir}/conf" />
		</copy>
		
		<copy todir="${classes.dir}">
			<fileset dir="${basedir}/properties" />
		</copy>
		<copy todir="${conf.dir}">
			<fileset dir="${basedir}/conf" />
			<mapper type="regexp" from="(.*).local" to="\1" />
		</copy>
		
		<!--copy todir="${classes.dir}">
			<fileset dir="${basedir}/conf" >
				<include name="applicationContext.xml"/>
				<include name="datasources-config.xml.local"/>
			</fileset>
			<mapper type="regexp" from="(.*).local" to="\1" />
		</copy-->
		
		<!--copy todir="${conf.dir}">
			<fileset dir="${basedir}/conf" >
				<exclude name="*.local" />
				<exclude name="web.xml" />
			</fileset>
		</copy-->
		<copy file="${basedir}/local_lib/ojdbc14.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/jms.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/tibcrypt.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/tibjms.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/commons-discovery-0.2.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/commons-logging-1.0.4.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/hibernate-annotations-3.5.0-Final.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/slf4j-api-1.6.1.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/antlr-2.7.6.jar" todir="${lib.dir}/" />
		<copy file="${basedir}/local_lib/antlr-runtime.jar" todir="${lib.dir}/" />
			
		<copy todir="${classes.dir}">
			<fileset dir="${src.dir}">
				<include name="**/*.xml" />
				<include name="*.xsl"/>
				<include name="*.properties" />
			</fileset>
		</copy>
	</target>
</project>