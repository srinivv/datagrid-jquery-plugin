<%@ taglib prefix="s" uri="/struts-tags"%>
<script type="text/template" id="view-skus-template">
	<table border="0" cellspacing="0" cellpadding="0">
		<tr>
			<th width="350px">SKUS</th>
			<th width="500px">Description</th>
			<th width="5px">&nbsp;</th>
		</tr>
		<@ _.each(data, function(sku) { @>
        <tr>
			<td width="350px"><@= sku.partNo @></td>
			<td width="500px"><@= sku.description @></td>
			<td width="5px">
				<div class="posRel">
					<div class="delRow"></div>	
				</div>
			</td>
		</tr>
		<@ }); @>
	</table>
</script>

<script>
$(document).ready(function() {

	$("#viewskus").datagrid({
		source : 'node_viewskus.do',
		template : 'view-skus-template',
		pagination : true,
		params : { totalSKUs: '<%=request.getAttribute("totalSKUs")%>', nodeId: '<%=request.getAttribute("nodeId")%>' }
	});
	
});
toggleLeftNavigationMenus('node');
</script>

<div class="subHeading">
	<h1 class="nodesHeading">View SKU's</h1>
</div>

<div class="contentContainer">
	<div class="createOuter" style="display: block;">
		<div>
			<div class="skuTable">
				<h5 class="head1 mrgin12">You have added the following SKU's to create a new Node</h5>
				<div id="viewskus"></div>
			</div>

			<div class="clear"></div>
		</div>
		<!--skuContentArea-->
	</div>
</div>